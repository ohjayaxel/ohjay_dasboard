# Base URLs for the application (used for OAuth redirects, ISR revalidation hooks, etc.)
# Prefer NEXT_PUBLIC_BASE_URL so both client & server share the same canonical URL.
NEXT_PUBLIC_BASE_URL="http://localhost:3000"
# Optional legacy fallback; if omitted the server will use NEXT_PUBLIC_BASE_URL.
APP_BASE_URL="http://localhost:3000"

# Set to "development" for Supabase dev project, "production" for live env.
APP_ENV="development"

# Supabase (Dev)
NEXT_PUBLIC_SUPABASE_URL="https://your-dev-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="dev-anon-key"
SUPABASE_SERVICE_ROLE_KEY="dev-service-role-key"

# Supabase (Prod) â€” configure in Vercel Production env variables, not committed locally.
# NEXT_PUBLIC_SUPABASE_URL="https://your-prod-project.supabase.co"
# NEXT_PUBLIC_SUPABASE_ANON_KEY="prod-anon-key"
# SUPABASE_SERVICE_ROLE_KEY="prod-service-role-key"

# OAuth credentials (provide dev + prod values in respective environments)
META_APP_ID=""
META_APP_SECRET=""
META_API_VERSION="v18.0"
META_SYSTEM_USER_TOKEN=""
META_DEV_ACCESS_TOKEN=""
META_DEV_AD_ACCOUNT_ID=""
# Google Ads OAuth credentials
# Get these from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
# Google Ads Developer Token (required for API access)
# Get from: https://ads.google.com/aw/apicenter
GOOGLE_DEVELOPER_TOKEN=""
SHOPIFY_API_KEY=""
SHOPIFY_API_SECRET=""

# Encryption key for storing provider tokens (32 bytes; prefer base64 or hex in prod).
ENCRYPTION_KEY="dev-encryption-key-must-be-32-bytes!!"

# Optional: Upstash/Redis rate limiter configuration
RATE_LIMIT_REDIS_URL=""
RATE_LIMIT_REDIS_TOKEN=""

# Observability / analytics
SENTRY_DSN=""
SENTRY_ENVIRONMENT="development"

# Slack notifications (optional)
# Get webhook URL from: https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=""

